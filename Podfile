# platform :ios, '9.0'

target 'Events' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Events

  # Spin Feedback
  pod 'SpinCommon', :git => 'https://github.com/Spinners/Spin.Swift'
