# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'Events' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Events

  # Spin Feedback
  pod 'SpinCommon', :git => 'https://github.com/Spinners/Spin.Swift'
  pod 'SpinRxSwift', :git => 'https://github.com/Spinners/Spin.Swift'

  # RxSwift
  pod 'RxSwift', '5.1.1'
  pod 'RxCocoa', '5.1.1'
  
  # Coordinator
  pod 'XCoordinator'

  # Image Downloader //Kingfisher //SDSwebImage
  pod 'SDWebImage'

  # Code indentation
  pod 'SwiftLint'

  # Resources
  pod 'R.swift'

  # Constraints
  pod 'VanillaConstraints'

  # Utils
  pod 'IQKeyboardManagerSwift'
  pod 'EMSpinnerButton'

  target 'EventsTests' do
    inherit! :search_paths
    pod 'RxTest'
    pod 'RxBlocking'
  end
  
end
