  # RxSwift
  pod 'RxSwift', '5.1.1'
  pod 'RxCocoa', '5.1.1'
  
  # Coordinator
  pod 'XCoordinator'

  # Image Downloader
  pod 'Kingfisher'

  # Code indentation
  pod 'SwiftLint'

  # Resources
  pod 'R.swift'

  # Constraints
  pod 'VanillaConstraints'

  target 'EventsTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'EventsUITests' do
    # Pods for testing
  end

end
